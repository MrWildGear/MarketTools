{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Market Toolbox",
  "version": "1.0.0",
  "identifier": "com.markettoolbox.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Market Toolbox",
        "width": 800,
        "height": 600,
        "resizable": true,
        "minimizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "clipboard-manager": null,
    "dialog": null,
    "fs": null,
    "opener": null
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
